[user]
  email = erobert@scortex.io
  name  = erobert
[core]
  whitespace = trailing-space tab-in-indent tabwidth=2
[color]
  branch = auto
  status = auto
  diff = auto
[alias]
  ci = commit
  co = checkout
  st = status -sb
  br = branch
  di = diff
  ff = merge --ff-only
  vimdiff = difftool -y -t vimdiff
  #lg = log --graph --oneline
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[pager]
  status = on
[push]
  default = upstream
[merge]
  defaulttoupstream = true
  conflictstyle = diff3 
  log = true
[log]
  decorate = true
[branch]
  autosetuprebase = always
