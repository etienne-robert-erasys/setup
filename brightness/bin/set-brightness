#!/usr/bin/python

import sys

path = '/sys/class/backlight/intel_backlight/'

if len(sys.argv) != 2:
  sys.exit('wrong usage')

percent = int(sys.argv[1])

f = open(path + 'max_brightness', 'r')
max_brightness = int(f.read())
f.close()

f2 = open(path + 'brightness', 'w')
f2.write('{}'.format(int(max_brightness * percent / 100)))
f2.close()
